    const highCutoff = Math.ceil(totalCount / 3);
    const mediumCutoff = Math.ceil(totalCount * 2 / 3);

    sortedRecipes.forEach((recipe: ScoredRecipe, index: number) => {
      if (index < highCutoff) {
        tiers.get('high')!.push(recipe);
      } else if (index < mediumCutoff) {
