      console.error('[APIService] ç™»å½•å¤±è´¥:', error);
      if (error instanceof APIError) {
        throw error;
      }
      throw new APIError('ç™»å½•è¯·æ±‚å¤±è´¥', 'NETWORK_ERROR');
    }
  }
  
